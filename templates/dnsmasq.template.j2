read-ethers
log-queries
log-facility=/var/log/dnsmasq.log
addn-hosts = /var/lib/cobbler/cobbler_hosts

conf-dir=/etc/dnsmasq.d
domain=local

server=/domain.tld/
server=/domain.tld/{{ ip_dns1 }}
server=/domain.tld/{{ ip_dns2 }}


resolv-file=/etc/dnsmasq.upstream
interface=enp0s8
bind-interfaces
cache-size=1024
dhcp-no-override
dhcp-sequential-ip
dhcp-option=6,{{ ip_pxehost }}
